{
  "manifest_version": 3,
  "name": "CP Problem Tracker",
  "version": "1.1",
  "author": "Ali Azgor Rumi",
  "description": "Track your daily competitive programming problem-solving count and stay consistent with a 24-hour countdown.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}